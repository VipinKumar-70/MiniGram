<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | MiniGram</title>

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-zinc-950 text-white min-h-screen">
    <!-- Navbar -->
    <nav
      class="w-full px-10 py-5 border-b border-white/10 flex justify-between items-center"
    >
      <h1 class="text-xl font-bold"><a href="/">MiniGram</a></h1>

      <div class="flex gap-4">
        <a href="/feed" class="bg-blue-500 px-4 py-2 rounded-lg">Feed</a>

        <a href="/dashboard" class="bg-blue-500 px-4 py-2 rounded-lg"
          >Profile</a
        >

        <a href="/logout" class="bg-red-500 px-4 py-2 rounded-lg">Logout</a>
      </div>
    </nav>

    <!-- Dashboard Container -->
    <section class="max-w-4xl mx-auto px-6 py-10 grid md:grid-row-2 gap-8">
      <!-- PROFILE CARD -->

      <!-- CREATE POST -->
      <div class="bg-white/5 border border-white/10 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">Create Post</h2>

        <form
          action="/create-post"
          method="POST"
          enctype="multipart/form-data"
          class="space-y-4"
        >
          <!-- Caption -->
          <textarea
            name="caption"
            placeholder="Write something..."
            class="w-full bg-zinc-900 border border-white/10 rounded-lg p-3 outline-none resize-none"
            rows="3"
            required
          ></textarea>

          <!-- IMAGE UPLOAD BOX -->
          <label
            for="imageUpload"
            class="w-full h-40 border-2 border-dashed border-white/20 rounded-xl flex flex-col items-center justify-center cursor-pointer hover:border-indigo-500 transition"
          >
            <span class="text-zinc-400 text-sm"
              >Click here to upload image</span
            >
            <span class="text-zinc-500 text-xs mt-1">PNG, JPG supported</span>
          </label>

          <input
            id="imageUpload"
            type="file"
            name="image"
            class="hidden"
            required
          />

          <!-- Submit -->

          <button
            type="submit"
            class="w-full bg-indigo-500 py-2 rounded-lg hover:bg-indigo-600 transition"
          >
            Post
          </button>
        </form>
      </div>
    </section>
  </body>
</html>
